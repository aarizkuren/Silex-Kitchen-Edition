<!DOCTYPE html>
<html lang="[[ app.locale ]]" ng-app="Backend">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-COMPATIBLE" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Tomsaver backend app">
    <meta name="author" content="Tomsaver <operaciones@tomsaver.com>">

    <link rel="shortcut icon" href="[[ app.request.basepath ]]/favicon.ico">
    <title>[% block title 'Homepage' | trans %] .:. Tomsaver</title>

    <link href="[[ app.request.basepath ]]/assets/css/styles.css" rel="stylesheet">
    [% block stylesheets %][% endblock %]
</head>
<body ng-controller="MainController">
<!-- fixed navbar -->
<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        [% block menu %]
        [% include 'menu.html.twig' %]
        [% endblock %]
    </div>
</div>

[% block central %][%endblock%]

<div class="container">
    <div id="main" role="main" class="container">
        [% set alertTypeAvaillable = [ 'info', 'success', 'warning', 'error'] %]
        [% for alert in alertTypeAvaillable %]
        [% for message in app.session.getFlashBag.get(alert) %]
        <div class="alert alert-[[ alert ]]">
            <button class="close" data-dismiss="alert">Ã—</button>
            [[ message|trans ]]
        </div>
        [% endfor %]
        [% endfor %]
        <div ng-view></div>
    </div>
</div>
<div class="container">
    [% block footer %]
    <hr>
    <footer>
            <p>&copy; Tomsaver</p>
        </footer>
    [% endblock %]
</div>
<script src="[[ app.request.basepath ]]/assets/js/scripts.js"></script>
[% block javascripts %][% endblock %]
</body>
</html>
